{
  "name": "gudmed-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "admin-dashboard",
    "backend"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:frontend\" \"npm run start:admin\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm start",
    "start:admin": "cd admin-dashboard && npm start",
    "start:backend": "cd backend && npm start",
    "build": "npm run build:frontend && npm run build:admin && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:admin": "cd admin-dashboard && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && npm run install:frontend && npm run install:admin && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:admin": "cd admin-dashboard && npm install",
    "install:backend": "cd backend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}